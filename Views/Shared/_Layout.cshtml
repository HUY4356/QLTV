<!DOCTYPE html>
<html lang="en">
<!-- Views/Shared/_Layout.cshtml -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QL_ThuVien</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QL_ThuVien.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header class="header">
        <nav class="header-nav">
            <ul class="header-menu header-left">
                <li><a href="index.html?Home" title="home"><i class="fa-solid fa-2xl fa-book-open-reader"></i></a></li>
                <li><a href="index.html?category" title="Category">Category</a></li>
                <li><a href="index.html?rent" title="rent">Rent</a></li>
            </ul>
            <ul class="header-menu header-right">
                <form method="GET" action="index.html" class="header-search" role="search">
                    <input type="text" name="search" placeholder="Tìm sản phẩm..." required />
                    <button type="submit" title="Search"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                <li><a href="index.html?Login" title="login"><i class="fa-solid fa-user"></i></a></li>
                <li><a href="index.html?Account" title="account"><i class="fa-regular fa-user"></i></a></li>
                <li><a href="index.html?Admin" title="admin"><i class="fa-regular fa-user"></i></a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QL_ThuVien - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
