@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var fullName = User?.FindFirst("full_name")?.Value;
    var displayName = string.IsNullOrWhiteSpace(fullName) ? User?.Identity?.Name : fullName;

    <li class="account has-dropdown">
        <a title="account"><i class="fa-solid fa-user"></i></a>
        <ul class="dropdown">
            <li class="muted">Xin chào @displayName</li>

            @* Menu quản trị *@
            @if (User.IsInRole("Admin") || User.IsInRole("ThuThu"))
            {
                <li><a asp-area="Admin" asp-controller="Cards" asp-action="Index">Thẻ thư viện</a></li>
                <li><a asp-area="Admin" asp-controller="HanMucs" asp-action="Index">Hạn mức mượn</a></li>
                <li><a asp-area="Admin" asp-controller="IdentityUsers" asp-action="Index">Quản lý Tài khoản</a></li>
            }

            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản của tôi</a>
            </li>
            <li>
                <form method="post"
                      asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="linklike">Đăng xuất</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Login" title="Đăng nhập">
            <i class="fa-solid fa-user"></i>
        </a>
    </li>
}
