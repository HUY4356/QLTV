@* Areas/Admin/Views/Shared/_Layout.cshtml — Layout dành riêng cho Admin *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Quản trị</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"> @* Thêm Font Awesome *@
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admincss/sidebar.css" asp-append-version="true" />

    @* Thêm Section cho CSS của các trang con *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        <h2>Quản Lí Thư Viện</h2>
        <ul>
            <li>
                <a class="hehe" asp-area="Admin" asp-controller="Home" asp-action="Index" title="Home">Bảng điều khiển</a>
            </li>

            <!-- Quản trị tài khoản (Identity) -->
            <li>
                <a class="hehe" asp-area="Admin" asp-controller="IdentityUsers" asp-action="Index" title="Tài khoản">👤 Tài khoản</a>
            </li>

            <!-- Quản lý User (ứng dụng) -->
            <li>
                <a class_name="hehe" asp-area="" asp-controller="Users" asp-action="Index" title="Độc giả">👥 Độc giả (App)</a>
            </li>

            <!-- Thẻ thư viện -->
            <li>
                <a class="hehe" asp-area="Admin" asp-controller="Cards" asp-action="Index" title="Thẻ thư viện">🎫 Thẻ thư viện</a>
            </li>

            <!-- Hạn mức mượn -->
            <li>
                <a class_name="hehe" asp-area="Admin" asp-controller="HanMucs" asp-action="Index" title="Hạn mức mượn">📏 Hạn mức mượn</a>
            </li>

            <li>
                <a class="hehe" asp-area="Admin" asp-controller="DanhMucSaches" asp-action="Index">📂 Danh mục</a>
            </li>

            <li>
                <a class="hehe" asp-area="Admin" asp-controller="Books" asp-action="Index">📚 Sách</a>
            </li>

            <li>
                <a class="hehe" asp-area="Admin" asp-controller="Phongs" asp-action="Index">🏠 Phòng</a>
            </li>



            <li>
                <a class="hehe" asp-area="Admin" asp-controller="ViPham" asp-action="Index">Quản lý vi phạm</a>
            </li>

            <li>
                <a class="hehe" asp-area="" asp-controller="Home" asp-action="Index" title="home">🏠 Home (User)</a>
            </li>

        </ul>

        <!-- Nút đăng xuất (về giao diện người dùng) -->
        <form class="mt-3 px-2" method="post"
              asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn btn-sm btn-outline-light w-100" type="submit">
                <i class="fa-solid fa-sign-out-alt me-1"></i> Đăng xuất
            </button>
        </form>
    </div>

    <div class="content">
        @* Thông báo thành công *@
        @if (TempData["Ok"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["Ok"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </div>

    @* --- THÊM SCRIPT VÀO CUỐI BODY --- *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* Thêm script riêng của Admin nếu có *@
    @* <script src="~/js/admin_site.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

