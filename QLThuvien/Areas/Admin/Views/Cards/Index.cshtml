@model IEnumerable<QLThuvien.Models.The>
@{
    ViewData["Title"] = "Thẻ thư viện";
}
<h2>@ViewData["Title"]</h2>
@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<p><a class="btn btn-primary" asp-area="Admin" asp-controller="Cards" asp-action="Create">+ Cấp thẻ</a></p>

<table class="table table-striped">
    <thead><tr><th>Mã thẻ</th><th>Người dùng</th><th>Hạn thẻ</th><th>Trạng thái</th><th></th></tr></thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TheCode</td>
                <td>@t.User.Fullname (@t.User.Email)</td>
                <td>@t.HanThe:dd/MM/yyyy</td>
                <td>@t.TrangThai</td>
                <td>
                    <form asp-area="Admin" asp-controller="Cards" asp-action="Extend" asp-route-id="@t.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-secondary" type="submit">Gia hạn +1 năm</button>
                    </form>
                    <form asp-area="Admin" asp-controller="Cards" asp-action="Block" asp-route-id="@t.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Khóa thẻ</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
