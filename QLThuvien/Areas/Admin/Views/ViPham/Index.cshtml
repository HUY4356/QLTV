@model IEnumerable<QLThuvien.Models.ViPhamUser>

@{
    ViewData["Title"] = "Quản lý vi phạm";
}

<h2 class="mb-4">Danh sách vi phạm</h2>

<form method="get" class="mb-3">
    <input type="text" name="searchTerm" value="@Context.Request.Query["searchTerm"]" placeholder="Tìm theo tên hoặc email" class="form-control w-25 d-inline-block" />
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Tên</th>
                <th>Email</th>
                <th>Số lần No-Show</th>
                <th>Số lần Trễ hạn</th>
                <th>Cập nhật cuối</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User?.Fullname</td>
                    <td>@item.User?.Email</td>
                    <td>@item.CountNoShow</td>
                    <td>@item.CountTreHan</td>
                    <td>@item.LastUpdated?.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Không có dữ liệu vi phạm.</div>
}