@model QLThuvien.Areas.Admin.Controllers.IdentityUsersController.ResetPasswordVM
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}
<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Cập nhật mật khẩu</button>
    <a asp-area="Admin" asp-controller="IdentityUsers" asp-action="Index" class="btn btn-link">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
