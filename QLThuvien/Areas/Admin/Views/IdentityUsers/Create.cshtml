@model QLThuvien.Areas.Admin.Controllers.IdentityUsersController.CreateUserVM
@{
    ViewData["Title"] = "Tạo tài khoản";
}
<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <fieldset class="mb-3">
        <legend>Vai trò (chọn 1)</legend>
        @for (var i = 0; i < Model.Roles.Count; i++)
        {
            var roleName = Model.Roles[i].Name;
            <div class="form-check">
                <input type="radio" class="form-check-input"
                       asp-for="SelectedRole" value="@roleName"
                       checked="@(Model.SelectedRole == roleName)" />
                <label class="form-check-label">@roleName</label>
            </div>
        }
        <span asp-validation-for="SelectedRole" class="text-danger"></span>
    </fieldset>


    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-area="Admin" asp-controller="IdentityUsers" asp-action="Index" class="btn btn-link">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
