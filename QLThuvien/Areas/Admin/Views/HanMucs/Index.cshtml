@model IEnumerable<QLThuvien.Models.HanMuc>
@{
    ViewData["Title"] = "Hạn mức mượn";
}
<h2>@ViewData["Title"]</h2>
<p><a class="btn btn-primary" asp-area="Admin" asp-controller="HanMucs" asp-action="Create">+ Thêm hạn mức</a></p>
<table class="table table-striped">
    <thead><tr><th>Vai trò</th><th>Số sách</th><th>Số ngày</th><th>Gia hạn</th><th>Phạt tối đa</th><th></th></tr></thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Role.Name</td>
                <td>@x.MaxBooks</td>
                <td>@x.MaxDays</td>
                <td>@x.MaxRenewals</td>
                <td>@x.MaxFines</td>
                <td><a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-controller="HanMucs" asp-action="Edit" asp-route-id="@x.Id">Sửa</a></td>
            </tr>
        }
    </tbody>
</table>
