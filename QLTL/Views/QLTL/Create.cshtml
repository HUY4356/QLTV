@model QLTL.Models.Document

@{
    ViewBag.Title = "Thêm tài liệu mới";
}

<h2>📤 Thêm tài liệu mới</h2>

@using (Html.BeginForm("Create", "Documents", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="mb-3">
        <label for="Title" class="form-label">Tên tài liệu</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập tên tài liệu" })
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Mô tả</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, placeholder = "Nhập mô tả" })
    </div>

    <div class="mb-3">
        <label for="file" class="form-label">Chọn file tải lên</label>
        <input type="file" name="file" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">💾 Lưu tài liệu</button>
    <a href="@Url.Action("Index", "Documents")" class="btn btn-secondary">⬅ Quay lại danh sách</a>
}
