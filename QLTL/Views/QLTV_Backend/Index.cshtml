@model IEnumerable<QLTL.Models.Document>

@{
    ViewBag.Title = "Danh sách tài liệu";
}

<h2>📂 Danh sách tài liệu</h2>

<p>
    <a href="@Url.Action("Create", "Documents")" class="btn btn-primary">+ Thêm tài liệu mới</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Hiện chưa có tài liệu nào được tải lên.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Tên tài liệu</th>
                <th>Mô tả</th>
                <th>File</th>
                <th>Ngày tải lên</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Id</td>
                    <td>@doc.Title</td>
                    <td>@doc.Description</td>
                    <td><a href="@doc.FilePath" target="_blank">Xem file</a></td>
                    <td>@doc.UploadDate.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<p style="margin-top:20px;">
    <a href="@Url.Action("Statistics", "Documents")" class="btn btn-secondary">📊 Xem thống kê</a>
</p>
